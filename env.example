# ============================================
# Environment Variables for Dormitory Management System
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# Application Configuration
# ============================================

# Node Environment
NODE_ENV=development

# Server Port
PORT=3000

# Frontend API URL (for CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Database Configuration
# ============================================

# PostgreSQL Database URL
#DATABASE_URL="postgresql://username:password@localhost:5432/dormitory?schema=public"
DATABASE_URL=postgresql://postgres:Mw1ueFmdKf2lvYOF@db.izoeosofqwehmeabmgxn.supabase.co:5432/postgres

# ============================================
# JWT Authentication
# ============================================

# JWT Secret Key (ต้องมีความยาวอย่างน้อย 32 ตัวอักษร)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# JWT Expires In
JWT_EXPIRES_IN=24h

# JWT Refresh Secret
JWT_REFRESH_SECRET=your-refresh-token-secret-key-minimum-32-characters

# JWT Refresh Expires In
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# LINE Messaging API
# ============================================

# LINE Channel ID
LINE_CHANNEL_ID=your-line-channel-id

# LINE Channel Secret
LINE_CHANNEL_SECRET=your-line-channel-secret

# LINE Access Token
LINE_ACCESS_TOKEN=your-line-access-token

# ============================================
# Redis Configuration
# ============================================

# Redis Host
REDIS_HOST=localhost

# Redis Port
REDIS_PORT=6379

# Redis Password (ถ้ามี)
REDIS_PASSWORD=

# Redis URL (alternative to host/port)
REDIS_URL=redis://:password@localhost:6379

# ============================================
# Logging Configuration
# ============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# File Upload Configuration (Optional)
# ============================================

# AWS S3 Bucket (สำหรับเก็บรูปภาพ)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=dormitory-uploads

# ============================================
# Email Configuration (Optional)
# ============================================

# SMTP Configuration (สำหรับส่งอีเมลแจ้งเตือน)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# ============================================
# Next.js Frontend Configuration
# ============================================

# Frontend API URL (สำหรับ Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3000
