# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dormitory"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secrets (use strong random strings)
JWT_SECRET="your-jwt-secret-at-least-32-characters-long"
JWT_REFRESH_SECRET="your-refresh-secret-at-least-32-characters-long"

# Server
NODE_ENV="development"
PORT=3001

# LINE Official Account
LINE_CHANNEL_ID="your-line-channel-id"
LINE_CHANNEL_SECRET="your-line-channel-secret"
LINE_ACCESS_TOKEN="your-line-access-token"

# Supabase (for file storage)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Optional: API Key for external services
API_KEY="your-api-key"
